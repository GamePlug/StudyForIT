<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leichao.studyforit">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".appmode.tabhome.StudyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.leichao.studyforit.common.net.glide.CustomGlideModule"
            android:value="GlideModule" />

        <activity android:name=".appmode.tabhome.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".appmode.tabhome.MainTabActivity"
            android:launchMode="singleTask"/>

        <activity
            android:name=".test.TestListActivity"/>

        <activity
            android:name=".test.TestOkhttpActivity"/>

        <activity
            android:name=".test.TestUploadActivity"/>

        <activity
            android:name=".test.TestDownloadActivity"/>

    </application>

</manifest>
